{
	"name": "lc3support",
	"description": "LC3 support, including code highlight, autocompletion and static checking",
	"license": "MIT",
	"version": "0.0.8",
	"publisher": "qili",
	"repository": {
		"type": "git",
		"url": "https://github-dev.cs.illinois.edu/qili8/lc3_vscode"
	},
	"categories": [
		"Programming Languages"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:lc3"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "lc3",
				"aliases": [
					"lc3"
				],
				"extensions": [
					".asm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "lc3",
				"scopeName": "source.asm",
				"path": "./syntaxes/lc3.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "lc3LanguageServer",
			"properties": {
				"lc3LanguageServer.showWarnings": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Controls whether to show warnings."
				},
				"lc3LanguageServer.showErrors": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Controls whether to show errors."
				},
				"lc3LanguageServer.showMultipleLabels": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Controls whether to generate warning when there are multiple labels at the same location."
				},
				"lc3LanguageServer.showIncompleteInstructions": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "Controls whether to generate error message when an illegal instruction is present."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"mocha": "^8.1.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.9.4"
	}
}
